<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey"
    android:orientation="vertical"
    android:paddingTop="6dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="5dp" >

        <pres.nc.maxwell.feedeye.view.LayoutImageView
            android:id="@+id/iv_icon"
            android:layout_width="18dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="Max的博客"
            android:textColor="@color/theme_color"
            android:textSize="14sp" />
    </LinearLayout>

    <View style="@style/hr_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_label1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_press_background_light_grey"
            android:gravity="center"
            android:padding="5dp"
            android:text="博客"
            android:textSize="12sp" />

        <View style="@style/vt_line" />

        <TextView
            android:id="@+id/tv_label2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_press_background_light_grey"
            android:gravity="center"
            android:padding="5dp"
            android:text="Android"
            android:textSize="12sp" />

        <View style="@style/vt_line" />

        <TextView
            android:id="@+id/tv_label3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_press_background_light_grey"
            android:gravity="center"
            android:padding="5dp"
            android:text="技术"
            android:textSize="12sp" />

        <View style="@style/vt_line" />

        <TextView
            android:id="@+id/tv_label4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_press_background_light_grey"
            android:gravity="center"
            android:padding="5dp"
            android:text="分享"
            android:textSize="12sp" />
    </LinearLayout>

    <View style="@style/hr_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
               android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="10dp"
            android:text="主要记录学习过程中特殊的问题和转载有价值的文章，偶尔记录一些以前学习的笔记..."
            android:textSize="12sp" />

        <View style="@style/vt_line" />

        <TextView
            android:id="@+id/tv_add_feed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_press_background_light_grey"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/btn_add_feed"
            android:gravity="center"
            android:padding="10dp"
            android:text="添加订阅"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/light_grey" />

</LinearLayout>