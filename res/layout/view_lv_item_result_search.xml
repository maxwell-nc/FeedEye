<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/selector_press_background_transparent"
    android:gravity="center_vertical"
    android:paddingTop="6dp" >

    <pres.nc.maxwell.feedeye.view.LayoutImageView
        android:id="@+id/iv_item_pic"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@color/grey" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="9dp"
        android:layout_toRightOf="@id/iv_item_pic"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="订阅标题"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        style="@style/hr_line"
        android:layout_below="@id/iv_item_pic"
        android:layout_marginTop="6dp" />

</RelativeLayout>