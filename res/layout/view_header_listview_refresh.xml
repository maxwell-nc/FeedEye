<?xml version="1.0" encoding="utf-8"?>
<!-- 根节点不要使用RelativeLayout已经重写了onMeasure方法，会导致view.measure(0, 0)空指针异常 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/listview_refresh_arrow" />

        <ProgressBar
            android:id="@+id/pb_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/anim_refresh_rotate"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pb_rotate"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下拉刷新"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tips"
                android:text="最后刷新时间：无上次刷新时间"
                android:textColor="@color/grey"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>