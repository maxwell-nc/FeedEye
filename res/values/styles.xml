<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 底部导航按钮的样式 -->
    <style name="btn_navigation_sytle">
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingLeft">27dp</item>
        <item name="android:paddingRight">27dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/btn_navigation_text</item>
    </style>

    <!-- 添加订阅页面标题的样式 -->
    <style name="add_feed_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 水平分割线 -->
    <style name="hr_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/split_line</item>
    </style>

    <!-- 垂直分割线 -->
    <style name="vt_line">
        <item name="android:layout_width">0.1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/split_line</item>
    </style>

    <!-- 标签文本 -->
    <style name="label_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_press_background_item</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 设置上面的按钮 -->
    <style name="setting_top_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_press_background_light_grey</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/drak_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 设置下面的按钮 -->
    <style name="setting_bottom_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_press_background_light_grey</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">15dp</item>
        <item name="android:textColor">@color/drak_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>